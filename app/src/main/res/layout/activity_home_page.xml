<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    xmlns:xhf = "http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.thejiyu.activity.HomePageActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <android.support.v4.view.ViewPager
                android:id = "@+id/id_viewPager"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
            </android.support.v4.view.ViewPager>
            <LinearLayout
                android:background="@drawable/tab_bg"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <com.example.thejiyu.view.ChangeIconView
                    android:id="@+id/id_indicator_one"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:padding="5dp"
                    android:layout_weight="1"
                    xhf:iconx = "@drawable/ic_menu_emoticons"
                    xhf:text="@string/fristicon"
                    xhf:text_size="12sp"
                    xhf:colorx="#ff45c01a"
                    />
                <com.example.thejiyu.view.ChangeIconView
                    android:id="@+id/id_indicator_two"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:padding="5dp"
                    android:layout_weight="1"
                    xhf:iconx = "@drawable/ic_menu_cc_am"
                    xhf:text="@string/second"
                    xhf:text_size="12sp"
                    xhf:colorx="#ff45c01a"
                    />
                <com.example.thejiyu.view.ChangeIconView
                    android:id="@+id/id_indicator_three"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:padding="5dp"
                    android:layout_weight="1"
                    xhf:iconx = "@drawable/ic_menu_edit"
                    xhf:text="@string/third"
                    xhf:text_size="12sp"
                    xhf:colorx="#ff45c01a"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
